{
  "name": "typescript-nodejs-eslint-prettier-starter",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit && eslint . && npx prettier --check .",
    "lint": "eslint . --fix && npx prettier --write .",
    "start": "npm run build && node build/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^16.18.38",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "2.8.8",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.16.0"
  }
}
